<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>Vividio || <%= title %> </title>
</head>
<body style="padding: 0 2%;">
    <div class="navbar">
        <ul>
           <li><a href="/" > Movies</a></li>
           <li><a href="/About"> About</a></li>
           <li><a href="/new_movie"> Add New</a></li>
       </ul>
   </div>
   <div style=" background-color: black;padding: 5%;color: white;">
    <div class="single" >
        <div class="pica" >
            <img src="<%=movies.poster_path%>" alt="" class="img">
        </div>
        <div class="texts" >
            <h2 class="title" > Title: <%= movies.title %></h2>
            <p >Release_date: <%= movies.release_date %></p>
            <p >Original_language: <%= movies.original_language %></p>
            <p class="snippet" > Popularity: <%= movies.popularity %></p>
            <h3>overview:</h3>
            <article>
                <%= movies.overview %>
            </article>
            <div class="btns">
                <a class="delete btn" data-doc="<%= movies.id %>">Delete</a>
                <a class="update btn" href="" >Update</a>
            </div>
        </div>
    </div>
    </div>

    <script>
        const trashcan = document.querySelector('a.delete')
        

        const deletePost = (e) =>{
            try {
                const endpoint = `/${trashcan.dataset.doc}`;
                fetch(endpoint, {
                    method: 'DELETE',
                })
                .then(response => response.json())
                .then(data => window.location.href = data.redirect)
                .catch(err => console.log(err));
            } catch (error) {
                console.log(error)
            }             
        }

        trashcan.addEventListener('click',deletePost);
    </script>
</body>
</html>